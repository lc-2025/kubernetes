FROM nginx:alpine AS runtime
ENV SHARED_VOLUME=/data/www
# Create shared volume directory for Wikipedia pages
RUN mkdir -p ${SHARED_VOLUME}
# Configure nginx to serve from shared volume
RUN rm /etc/nginx/conf.d/default.conf
COPY <<EOF /etc/nginx/conf.d/default.conf
server {
    listen 80;
    server_name _;

    location / {
        root ${SHARED_VOLUME};
        try_files \$uri \$uri/ =404;
    }
}
EOF
EXPOSE 80
USER nginx
CMD ["nginx", "-g", "daemon off;"]
